<h1>Categories</h1>

<%=link_to 'New category', new_adv_category_path %>

<table>
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>

  <% @adv_categories.each do |adv_category| %>
      <tr>
        <td><%= adv_category.name %></td>
        <td><%= link_to 'Show', adv_category_path(adv_category) %></td>
        <td><%= link_to 'Edit', edit_adv_category_path(adv_category) %></td>
        <td><%= link_to 'Destroy', adv_category_path(adv_category),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>


</table>
