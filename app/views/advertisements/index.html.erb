<h1>Advertisements</h1>

<%= form_tag(advertisements_path, :method => 'get') do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<br/>

<%= will_paginate @advertisements %>

  <table>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Category</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>

    <% @advertisements.each do |advertisement| %>
      <tr>
        <td><%= advertisement.name %></td>
        <td><%= advertisement.text %></td>
        <td><%= advertisement.adv_category %></td>
        <td><%= advertisement.owner.email %></td>
        <td><%= link_to 'Show', advertisement_path(advertisement) %></td>
        <td><%= link_to 'Edit', edit_advertisement_path(advertisement) %></td>
        <td><%= link_to 'Destroy', advertisement_path(advertisement),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>

<h3><%=link_to 'Add new advertisement', new_advertisement_path %></h3>